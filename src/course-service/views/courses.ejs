
    <!-- Team Start -->
    <div class="container-fluid py-5">
        <div class="container pt-5 pb-3">
            <div class="text-center mb-5">
                <h5 class="text-primary text-uppercase mb-3" style="letter-spacing: 5px;">Courses</h5>
                <h1>My Courses</h1>
            </div>
            <a href="/courses/addCourse">Thêm mới</a>
            <% if(courses) { %>
            <div class="row">
                <% courses.forEach((course) => { %>
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="rounded overflow-hidden mb-2">
                            <img class="img-fluid" src="<%= course.Image ? course.Image : '/courses/course-1.jpg' %>" alt="">
                            <div class="bg-secondary p-4">
                                <div class="d-flex justify-content-between mb-3">
                                    <small class="m-0"><i class="fa fa-users text-primary mr-2"></i><%= course.Teacher_id %></small>
                                    <small class="m-0"><i class="far fa-clock text-primary mr-2"></i><%= course.Duration %>h</small>
                                </div>
                                <a class="h5" href="/courses/<%= course.Id %>"><%= course.Name_course %></a>
                                <h5 class="m-0">Học phí: <%= course.Tuition %> VNĐ</h5>
                                <div class="border-top mt-4 pt-4">
                                    <div class="d-flex justify-content-between">
                                        <h6 class="m-0">Trạng thái: <%= course.Status %></h6>
                                        <% if (course.Status === 'Draft') { %>
                                            <form action="/courses/reqCourse" method="post">
                                                <input type="hidden" value="<%= course.Id %>" name="Course_id">
                                                <button type="submit">Yêu cầu duyệt</button>
                                            </form>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
            <% } %>
        </div>
    </div>
    <!-- Team End -->


 