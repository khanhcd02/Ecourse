<div class="c">
    <form action="/courses/Exam/<%= examId %>" method="POST" id="examForm">
        <div id="question-list">
            <div class="question-item">
                <label for="question">Question:</label>
                <input class="form-control" type="text" name="questions[0][Question]" required><br>
                <label for="A">Option A:</label>
                <input class="form-control answer" type="text" name="questions[0][A]" required>
                <label for="B">Option B:</label>
                <input class="form-control answer" type="text" name="questions[0][B]" required><br>
                <label for="C">Option C:</label>
                <input class="form-control answer" type="text" name="questions[0][C]" required>
                <label for="D">Option D:</label>
                <input class="form-control answer" type="text" name="questions[0][D]" required><br>
                <label for="Answer">Correct Answer:</label>
                <select name="questions[0][Answer]">
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                </select>
            </div>
        </div>
        <button type="button" class="btn btn-success" id="add-question-btn">+ Add Question</button>
        <button class="btn btn-warning" type="submit">Save Exam</button>
    </form>
</div>
<style>
    .c {
        background-color: #f0e0cd;
        margin-top: 20px;
        max-width: 60%;
        margin: auto;
        margin-top: 50px;
        border-radius: 20px;
    }

    body {
        background-color: #f9f5eb;
        background-image: none;
    }
    form {
        padding: 25px;
    }

    form label {
        margin-left: 10px;
    }

    .answer {
        max-width: 25%;
        display: inline;
    }
</style>
<script>
    let questionCount = 1;
    document.getElementById('add-question-btn').addEventListener('click', function() {
        const questionList = document.getElementById('question-list');
        const newQuestion = document.createElement('div');
        newQuestion.classList.add('question-item');
        newQuestion.innerHTML = `
            <br>
            <label for="question">Question:</label>
            <input class="form-control" type="text" name="questions[${questionCount}][Question]" required><br>
            <label for="A">Option A:</label>
            <input class="form-control answer" type="text" name="questions[${questionCount}][A]" required>
            <label for="B">Option B:</label>
            <input class="form-control answer" type="text" name="questions[${questionCount}][B]" required><br>
            <label for="C">Option C:</label>
            <input class="form-control answer" type="text" name="questions[${questionCount}][C]" required>
            <label for="D">Option D:</label>
            <input class="form-control answer" type="text" name="questions[${questionCount}][D]" required><br>
            <label for="Answer">Correct Answer:</label>
            <select name="questions[${questionCount}][Answer]">
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
                <option value="D">D</option>
            </select>
        `;
        questionList.appendChild(newQuestion);
        questionCount++;
    });
</script>
